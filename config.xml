<?xml version='1.0' encoding='utf-8'?>
<widget id="ir.gost.vatmate" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <preference name='phonegap-version' value='cli-6.5.0' />
	<name>VetMate</name>
    <description>a 24/7 vet assistant, right in your pocket.</description>
    <author email="vetmate@gost.ir" href="https://gost.ir">
        MatinGholami
    </author>
    <content src="index.html" />
	<access origin="https://gost.ir"></access>
	
	<allow-intent href="*" /><!-- the links that app can ask the system to open -->
<universal-links>
  <host name="*" scheme="*">
    <path url="*" event="ul_event" />
  </host>
</universal-links>
<platform name="android">
	<!--
		ldpi    : 36x36 px
		mdpi    : 48x48 px
		hdpi    : 72x72 px
		xhdpi   : 96x96 px
		xxhdpi  : 144x144 px
		xxxhdpi : 192x192 px
	-->
	<icon src="icons/ldpi.png" density="ldpi" />
	<icon src="icons/mdpi.png" density="mdpi" />
	<icon src="icons/hdpi.png" density="hdpi" />
	<icon src="icons/xhdpi.png" density="xhdpi" />
	<icon src="icons/xxhdpi.png" density="xxhdpi" />
	<icon src="icons/xxxhdpi.png" density="xxxhdpi" />
</platform>
<gap:plugin name="cordova-plugin-whitelist" source="npm" />
</widget>
